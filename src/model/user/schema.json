{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "User",
  "description": "The User",
  "required": ["email", "name", "password"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "integer",
      "title": "The database ID of the user."
    },
    "email": {
      "$id": "#/properties/email",
      "type": "string",
      "title": "The users unique email.",
      "examples": ["1999saman@gmail.com"]
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The users name.",
      "examples": ["Saman"]
    },
    "password": {
      "$id": "#/properties/password",
      "type": "string",
      "title": "The user hashed password."
    },
    "created_at": {
      "$id": "#/properties/created_at",
      "type": "string",
      "title": "The creation date of the user."
    },
    "updated_at": {
      "$id": "#/properties/updated_at",
      "type": "string",
      "title": "The date that the user was last updated."
    }
  }
}
